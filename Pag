  <script>
    // Cora√ß√µes autom√°ticos
    const heartsEl = document.getElementById("hearts");

    function spawnHeart(extra=false){
      const h = document.createElement("div");
      h.className = "heart";
      const left = Math.random()*100;
      const size = 10 + Math.random()*14;
      const duration = 6 + Math.random()*6;
      const delay = extra ? 0 : Math.random()*2;

      h.style.left = left + "vw";
      h.style.bottom = (-10 - Math.random()*30) + "px";
      h.style.width = size + "px";
      h.style.height = size + "px";
      h.style.animationDuration = duration + "s";
      h.style.animationDelay = delay + "s";
      const pink = 120 + Math.floor(Math.random()*60);
      h.style.filter = "drop-shadow(0 8px 10px rgba(0,0,0,.25))";
      h.style.opacity = "0";

      // varia√ß√£o de cor (rosas/vinho)
      const r = 255;
      const g = 80 + Math.floor(Math.random()*50);
      const b = 140 + Math.floor(Math.random()*60);
      h.style.background = `rgba(${r},${g},${b},.85)`;
      h.style.setProperty("--c", `rgba(${r},${g},${b},.85)`);

      // aplica cor nos pseudo-elementos
      h.style.setProperty("background-color", `rgba(${r},${g},${b},.85)`);

      heartsEl.appendChild(h);

      // ajustar pseudo via CSS? simples: deixa como est√° (j√° fica bom)
      // limpar depois
      setTimeout(()=> h.remove(), (duration + delay + 0.5)*1000);
    }

    // fluxo cont√≠nuo suave
    setInterval(()=> spawnHeart(false), 700);

    function pulseHearts(){
      for(let i=0;i<12;i++){
        setTimeout(()=>spawnHeart(true), i*80);
      }
      if (navigator.vibrate) navigator.vibrate(20);
    }

    async function share(){
      const text = "Uma mensagem especial pra voc√™ üíñ";
      try{
        if(navigator.share){
          await navigator.share({ title: document.title, text, url: location.href });
        }else{
          await navigator.clipboard.writeText(location.href);
          alert("Link copiado! üíñ");
        }
      }catch(e){
        // se cancelar, n√£o faz nada
      }
    }
  </script>
